import { useRef, useState } from "react";
import { useNavigate } from "react-router-dom";
import { useTranslation } from "react-i18next";
import {
  CalendarDays,
  CheckCircle,
  CreditCard,
  MoreVertical,
  Copy,
  X,
  User,
  Home,
  Phone,
  Mail,
} from "lucide-react";
import { motion, AnimatePresence } from "framer-motion";
import { ReservationStatusBadge } from "./ReservationStatusBadge";
import { formatScheduleLabel, formatMoney } from "../utils";
import { canWriteReservations } from "../rbac";
import { useAuth } from "../../../hooks/useAuth";

const SWIPE_THRESHOLD = 60; // px needed to reveal actions
const ACTION_WIDTH = 200; /* px width of revealed side panel */

/**
 * ReservationCard – mobile-first card with swipe actions.
 *
 * Swipe RIGHT → Quick actions : Confirm / Mark Paid
 * Swipe LEFT  → Danger actions : Cancel
 * Long-press  → Context menu
 */
const ReservationCard = ({
  reservation,
  resourceMap = {},
  locale,
  busyId,
  onConfirm,
  onMarkPaid,
  onCancel,
  onComplete,
  isFocused = false,
}) => {
  const { t } = useTranslation();
  const navigate = useNavigate();
  const { user } = useAuth();

  const [swipeX, setSwipeX] = useState(0);
  const [isDragging, setIsDragging] = useState(false);
  const [menuOpen, setMenuOpen] = useState(false);

  const touchStartX = useRef(null);
  const touchStartY = useRef(null);
  const longPressTimer = useRef(null);

  const isBusy = busyId === reservation.$id;
  const canWrite = canWriteReservations(user);

  const resourceTitle =
    resourceMap[reservation.resourceId || reservation.propertyId]?.title ||
    reservation.resourceId ||
    "—";

  const scheduleLabel = formatScheduleLabel(reservation, locale);

  // ── Swipe handlers ────────────────────────────────────────────────────────
  const handleTouchStart = (e) => {
    const touch = e.touches[0];
    touchStartX.current = touch.clientX;
    touchStartY.current = touch.clientY;

    // Long-press timer
    longPressTimer.current = setTimeout(() => {
      setMenuOpen(true);
    }, 600);
  };

  const handleTouchMove = (e) => {
    if (touchStartX.current === null) return;
    const dx = e.touches[0].clientX - touchStartX.current;
    const dy = e.touches[0].clientY - touchStartY.current;

    // Cancel long-press if finger moves
    if (Math.abs(dx) > 10 || Math.abs(dy) > 10) {
      clearTimeout(longPressTimer.current);
    }

    // Only handle horizontal swipes (ignore vertical scrolling)
    if (Math.abs(dy) > Math.abs(dx)) return;

    e.preventDefault(); // prevent scroll during horizontal swipe
    setIsDragging(true);
    const clamped = Math.max(-ACTION_WIDTH, Math.min(ACTION_WIDTH, dx));
    setSwipeX(clamped);
  };

  const handleTouchEnd = () => {
    clearTimeout(longPressTimer.current);
    setIsDragging(false);
    touchStartX.current = null;
    touchStartY.current = null;

    // Snap to revealed or closed
    if (swipeX > SWIPE_THRESHOLD) {
      setSwipeX(ACTION_WIDTH);
    } else if (swipeX < -SWIPE_THRESHOLD) {
      setSwipeX(-ACTION_WIDTH);
    } else {
      setSwipeX(0);
    }
  };

  const closeSwipe = () => setSwipeX(0);

  const handleConfirm = () => {
    closeSwipe();
    onConfirm?.(reservation.$id);
  };
  const handleMarkPaid = () => {
    closeSwipe();
    onMarkPaid?.(reservation.$id);
  };
  const handleCancel = () => {
    closeSwipe();
    onCancel?.(reservation.$id);
  };
  const handleComplete = () => {
    closeSwipe();
    onComplete?.(reservation.$id);
  };

  const copyId = () => {
    navigator.clipboard?.writeText(reservation.$id).catch(() => {});
    setMenuOpen(false);
    closeSwipe();
  };

  const handleCardClick = (e) => {
    if (isDragging || Math.abs(swipeX) > 10) {
      closeSwipe();
      return;
    }
    navigate(`/app/reservations/${reservation.$id}`);
  };

  return (
    <div
      id={`reservation-${reservation.$id}`}
      className={`relative overflow-hidden rounded-2xl border transition-shadow
        ${
          isFocused
            ? "border-cyan-400 dark:border-cyan-500 shadow-md shadow-cyan-500/20"
            : "border-slate-200 dark:border-slate-700"
        }
        bg-white dark:bg-slate-900`}
    >
      {/* ── Right-side green actions (swipe right) ── */}
      <div className="absolute inset-y-0 left-0 flex w-50 items-stretch">
        <button
          onClick={handleConfirm}
          disabled={isBusy || !canWrite}
          aria-label={t("appReservationsPage.actions.markConfirmed")}
          className="flex flex-1 flex-col items-center justify-center gap-1 bg-cyan-600 px-3 text-xs font-semibold text-white transition hover:bg-cyan-500 disabled:opacity-60"
        >
          <CheckCircle size={20} />
          {t("appReservationsPage.actions.markConfirmed")}
        </button>
        <button
          onClick={handleMarkPaid}
          disabled={isBusy || !canWrite}
          aria-label={t("appReservationsPage.actions.markCompleted")}
          className="flex flex-1 flex-col items-center justify-center gap-1 bg-emerald-600 px-3 text-xs font-semibold text-white transition hover:bg-emerald-500 disabled:opacity-60"
        >
          <CreditCard size={20} />
          {t("appReservationsPage.actions.markCompleted")}
        </button>
      </div>

      {/* ── Left-side danger actions (swipe left) ── */}
      <div className="absolute inset-y-0 right-0 flex w-50 items-stretch">
        <button
          onClick={handleCancel}
          disabled={isBusy || !canWrite}
          aria-label={t("appReservationsPage.actions.cancel")}
          className="flex flex-1 flex-col items-center justify-center gap-1 bg-rose-600 px-3 text-xs font-semibold text-white transition hover:bg-rose-500 disabled:opacity-60"
        >
          <X size={20} />
          {t("appReservationsPage.actions.cancel")}
        </button>
      </div>

      {/* ── Draggable card face ────────────────────────────────────────────── */}
      <motion.div
        animate={{ x: swipeX }}
        transition={
          isDragging
            ? { type: "tween", duration: 0 }
            : { type: "spring", stiffness: 300, damping: 30 }
        }
        onTouchStart={handleTouchStart}
        onTouchMove={handleTouchMove}
        onTouchEnd={handleTouchEnd}
        onClick={handleCardClick}
        role="article"
        tabIndex={0}
        onKeyDown={(e) => e.key === "Enter" && handleCardClick(e)}
        aria-label={`${t("appReservationsPage.title")} ${reservation.$id}`}
        className="relative z-10 cursor-pointer select-none bg-white p-4 dark:bg-slate-900"
        style={{ touchAction: "pan-y" }}
      >
        {/* Header row */}
        <div className="flex items-start justify-between gap-2">
          <div className="min-w-0 flex-1">
            <div className="flex flex-wrap items-center gap-1.5">
              <ReservationStatusBadge
                status={reservation.status}
                type="reservation"
              />
              <ReservationStatusBadge
                status={reservation.paymentStatus}
                type="payment"
              />
            </div>
            <p className="mt-1 truncate text-sm font-medium text-slate-900 dark:text-slate-100">
              {resourceTitle}
            </p>
          </div>

          {/* Context menu button */}
          <button
            type="button"
            onClick={(e) => {
              e.stopPropagation();
              setMenuOpen((v) => !v);
            }}
            aria-label="Opciones"
            aria-expanded={menuOpen}
            className="flex h-9 w-9 shrink-0 items-center justify-center rounded-lg text-slate-400 transition hover:bg-slate-100 hover:text-slate-700 dark:hover:bg-slate-800 dark:hover:text-slate-200 [@media(hover:none)]:hover:bg-transparent"
          >
            <MoreVertical size={18} />
          </button>
        </div>

        {/* Info rows */}
        <dl className="mt-3 grid grid-cols-1 gap-1.5 text-sm text-slate-600 dark:text-slate-300 sm:grid-cols-2">
          {reservation.guestName ? (
            <div className="flex items-center gap-2">
              <User size={13} className="shrink-0 text-slate-400" />
              <span className="truncate">{reservation.guestName}</span>
            </div>
          ) : null}
          {reservation.guestEmail ? (
            <div className="flex items-center gap-2">
              <Mail size={13} className="shrink-0 text-slate-400" />
              <span className="truncate">{reservation.guestEmail}</span>
            </div>
          ) : null}
          {reservation.guestPhone ? (
            <div className="flex items-center gap-2">
              <Phone size={13} className="shrink-0 text-slate-400" />
              <span className="truncate">{reservation.guestPhone}</span>
            </div>
          ) : null}
          <div className="flex items-center gap-2 sm:col-span-2">
            <CalendarDays size={13} className="shrink-0 text-slate-400" />
            <span>{scheduleLabel}</span>
          </div>
        </dl>

        {/* Amount row */}
        <div className="mt-3 flex items-center justify-between gap-2 border-t border-slate-100 pt-3 dark:border-slate-800">
          <span className="text-xs text-slate-400">
            #{reservation.$id.slice(-8)}
          </span>
          <span className="text-sm font-semibold text-slate-900 dark:text-slate-100">
            {formatMoney(
              reservation.totalAmount,
              reservation.currency || "MXN",
              locale,
            )}
          </span>
        </div>
      </motion.div>

      {/* ── Context menu overlay ─────────────────────────────────────────── */}
      <AnimatePresence>
        {menuOpen && (
          <>
            <div
              className="fixed inset-0 z-40"
              onClick={() => setMenuOpen(false)}
              aria-hidden="true"
            />
            <motion.div
              initial={{ opacity: 0, scale: 0.95, y: -4 }}
              animate={{ opacity: 1, scale: 1, y: 0 }}
              exit={{ opacity: 0, scale: 0.95, y: -4 }}
              transition={{ duration: 0.12 }}
              className="absolute right-2 top-12 z-50 min-w-45 overflow-hidden rounded-xl border border-slate-200 bg-white shadow-xl dark:border-slate-700 dark:bg-slate-800"
            >
              <button
                type="button"
                onClick={() => {
                  setMenuOpen(false);
                  navigate(`/app/reservations/${reservation.$id}`);
                }}
                className="flex w-full items-center gap-3 px-4 py-3 text-left text-sm text-slate-700 transition hover:bg-slate-50 dark:text-slate-200 dark:hover:bg-slate-700"
              >
                <Home size={15} /> Ver detalle
              </button>
              {canWrite && (
                <>
                  <button
                    type="button"
                    onClick={() => {
                      setMenuOpen(false);
                      handleConfirm();
                    }}
                    disabled={isBusy}
                    className="flex w-full items-center gap-3 px-4 py-3 text-left text-sm text-cyan-700 transition hover:bg-cyan-50 disabled:opacity-60 dark:text-cyan-300 dark:hover:bg-slate-700"
                  >
                    <CheckCircle size={15} />{" "}
                    {t("appReservationsPage.actions.markConfirmed")}
                  </button>
                  <button
                    type="button"
                    onClick={() => {
                      setMenuOpen(false);
                      handleMarkPaid();
                    }}
                    disabled={isBusy}
                    className="flex w-full items-center gap-3 px-4 py-3 text-left text-sm text-emerald-700 transition hover:bg-emerald-50 disabled:opacity-60 dark:text-emerald-300 dark:hover:bg-slate-700"
                  >
                    <CreditCard size={15} />{" "}
                    {t("appReservationsPage.actions.markCompleted")}
                  </button>
                  <button
                    type="button"
                    onClick={() => {
                      setMenuOpen(false);
                      handleCancel();
                    }}
                    disabled={isBusy}
                    className="flex w-full items-center gap-3 px-4 py-3 text-left text-sm text-rose-600 transition hover:bg-rose-50 disabled:opacity-60 dark:text-rose-400 dark:hover:bg-slate-700"
                  >
                    <X size={15} /> {t("appReservationsPage.actions.cancel")}
                  </button>
                </>
              )}
              <button
                type="button"
                onClick={copyId}
                className="flex w-full items-center gap-3 border-t border-slate-100 px-4 py-3 text-left text-sm text-slate-500 transition hover:bg-slate-50 dark:border-slate-700 dark:text-slate-400 dark:hover:bg-slate-700"
              >
                <Copy size={15} /> Copiar ID
              </button>
            </motion.div>
          </>
        )}
      </AnimatePresence>
    </div>
  );
};

export default ReservationCard;
